<!DOCTYPE html>
<html>
<head>
    <title><%= product.id ? 'Edit' : 'Add' %> Product - IMS</title>
    <link rel="stylesheet" href="/public/css/style.css">
</head>
<body>
    <nav class="navbar colorful-navbar">
        <div class="nav-logo">Inventory Management System</div>
        <ul class="nav-links">
            <li><a href="/products">Products</a></li>
            <li><a href="/stock">Stock</a></li>
            <li><a href="/orders">Orders</a></li>
            <li><a href="/sales">Sales</a></li>
            <li><a href="/purchases">Purchases</a></li>
            <li><a href="/reports">Reports</a></li>
            <li><a href="/logout">Logout</a></li>
        </ul>
    </nav>
    <div class="section-card">
        <h2><%= product.id ? 'Edit' : 'Add' %> Product</h2>
        <% if (typeof error !== 'undefined' && error) { %>
            <div class="error"><%= error %></div>
        <% } %>
        <form method="POST" action="<%= action %>">
            <label>Name:</label>
            <input type="text" name="name" value="<%= product.name || '' %>" required />
            <label>Category:</label>
            <input type="text" name="category" value="<%= product.category || '' %>" required />
            <label>Price:</label>
            <input type="number" name="price" step="0.01" value="<%= product.price || '' %>" required />
            <label>Stock:</label>
            <input type="number" name="stock" value="<%= product.stock || 0 %>" required />
            <label>Low Stock Threshold:</label>
            <input type="number" name="low_stock_threshold" value="<%= product.low_stock_threshold || 5 %>" required />
            <button type="submit"><%= product.id ? 'Update' : 'Add' %> Product</button>
        </form>
        <a href="/products">Back to Products</a>
    </div>
</body>
</html>
