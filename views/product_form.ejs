<!DOCTYPE html>
<html>
<head>
    <title><%= product.id ? 'Edit' : 'Add' %> Product - IMS</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="navbar">Product Form</div>
    <div class="container">
        <h2><%= product.id ? 'Edit' : 'Add' %> Product</h2>
        <% if (typeof error !== 'undefined' && error) { %>
            <div class="error"><%= error %></div>
        <% } %>
        <form method="POST" action="<%= action %>">
            <label>Name:</label>
            <input type="text" name="name" value="<%= product.name || '' %>" required />
            <label>Category:</label>
            <input type="text" name="category" value="<%= product.category || '' %>" required />
            <label>Price:</label>
            <input type="number" name="price" step="0.01" value="<%= product.price || '' %>" required />
            <label>Stock:</label>
            <input type="number" name="stock" value="<%= product.stock || 0 %>" required />
            <label>Low Stock Threshold:</label>
            <input type="number" name="low_stock_threshold" value="<%= product.low_stock_threshold || 5 %>" required />
            <button type="submit"><%= product.id ? 'Update' : 'Add' %> Product</button>
        </form>
        <a href="/products">Back 